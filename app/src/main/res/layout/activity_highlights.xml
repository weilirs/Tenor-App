        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            app:cardElevation="0dp"
            android:layout_column="2"
            android:layout_marginTop="12.75dp">

