            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/highlight7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                app:riv_corner_radius="20dip" />

            <ImageView
